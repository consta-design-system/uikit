{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "allowJs": true,
    "isolatedModules": true,
    "importHelpers": true
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "./src/__tests__/*",
    "./src/storybook-features/*",
    "./src/**/*.stories/**",
    "./src/**/*.stories.*",
    "./src/themes/*"
  ]
}
